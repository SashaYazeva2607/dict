<Page x:Class="WpfApp2.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Page" Height="230" Width="230">
    <Grid HorizontalAlignment="Left" Width="253" Margin="0,0,-23,0">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Height="220" Margin="0,0,10,0" Width="220">
            <Label Content="Понятие:" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
            <TextBox x:Name="TermTextBox" Width="150" Margin="0,5,0,5"/>
            <Label Content="Определение:"/>
            <TextBox x:Name="DefinitionTextBox" Width="150" Margin="0,5,0,5"/>
            <Label Content="Источник:"/>
            <TextBox x:Name="SourceTextBox" Width="150" Margin="0,5,0,5"/>
            <Button Content="Сохранить" Click="Add_Click" Width="150" Margin="35,10,35,0" Height="35"/>
        </StackPanel>
    </Grid>
</Page>